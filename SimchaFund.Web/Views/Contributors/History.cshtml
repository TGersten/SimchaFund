@using SimchaFund.Data
@model HistoryViewModel

<div b-2ya7vgwtda class="container">
    <main b-2ya7vgwtda role="main" class="pb-3" style="margin-top: 60px;">

        <div class="header">
            <h1>History for @Model.Contributor.FirstName  @Model.Contributor.LastName </h1>
            <h3>Current Balance: $@(Model.Contributor.TotalDeposited - @Model.Contributor.TotalContributed).00</h3>
        </div>

        <div class="row header">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Action</th>
                        <th>Date</th>
                        <th>Amount</th>
                    </tr>

                    @if (Model.Transactions != null)
                    {

                        @foreach (Transaction t in Model.Transactions)
                        {
                            <tr>
                                <td>
                                    @t.Action
                                </td>
                                <td style="text-align: center; vertical-align: middle;">
                                    @t.Date.ToShortDateString()
                                </td>
                                @if (t.Action == "Deposit")
                                {
                                    <td style="text-align: center; vertical-align: middle;">

                                        -$ @(Convert.ToInt32(t.Amount)).00
                                    </td>
                                }
                                else
                                {
                                    <td style="text-align: center; vertical-align: middle;">

                                        -$ @(Convert.ToInt32(t.Amount)).00
                                    </td>
                                }
                            </tr>
                        }
                    }

                </table>
            </div>
        </div>

        <div style="text-align:center;">
            <a class="btn btn-lg btn-danger" href="/contributors/index">Back to Contributors</a>
        </div>
    </main>
</div>
